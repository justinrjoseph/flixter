<div class="enhance-box col-xs-10 col-xs-offset-1">
    <h1>What I'm Learning</h1>
    
    <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center"><%= link_to course.title, course_path(course) %></h3>
    <%= image_tag course.image, class: 'img-responsive course-image' %>
    
    <div class="col-xs-12 col-sm-8">
        <%= course.description %>
    </div>
    
    <div class="col-xs-12 col-sm-4">
        <%= link_to "More Details...", course_path(course), class: 'btn btn-lg btn-primary pull-right' %>
    </div>
    <hr class="col-xs-8 col-xs-offset-2 learning">
    <br class="clear">
    <% end %>
    
    <h1>What I'm Teaching</h1>
    
    <% current_user.courses.each do |course| %>
    <h3 class="text-center"><%= link_to course.title, course_path(course) %></h3>
    <%= image_tag course.image, class: 'img-responsive course-image' %>
    
    <div class="col-xs-12 col-sm-8">
        <%= course.description %>
    </div>
    
    <div class="col-xs-12 col-sm-4">
        <%= link_to "More Details...", course_path(course), class: 'btn btn-lg btn-primary pull-right' %>
    </div>
    <hr class="col-xs-8 col-xs-offset-2 teaching">
    <br class="clear">
    <% end %>
</div>