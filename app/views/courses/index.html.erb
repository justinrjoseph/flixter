<div class="enhance-box col-xs-10 col-xs-offset-1">
	<h1 class="text-center">Learn Something Today!</h1><!-- /.text-center -->
	<hr>

	<% @courses.each do |course| %>
	<div class="course">
		<h2 class="text-center"><%= link_to course.title, course_path(course) %></h2><!-- /.text-center -->

		<div class="col-sm-8 col-xs-12 course-description">
			<%= course.description %>
		</div><!-- /.col-sm-8 col-xs-12 -->

		<div class="col-sm-4 col-xs-12 text-center">
			<%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-lg pull-right' %>
		</div><!-- /.col-sm-4 col-xs-12 text-center -->
	</div><!-- /.course -->
	<% end %>
</div><!-- /.enhance-box col-xs-10 col-xs-offset-1 -->